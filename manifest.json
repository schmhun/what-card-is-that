{
  "manifest_version": 3,
  "name": "What Card Is That?",
  "description": "Chrome extension to search a common TCG site for any text on a webpage",
  "version": "1.0",
  "action": {
    "default_popup": "hello.html",
    "default_icon": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    }
  },
  "permissions": ["contextMenus", "tabs"],
  "background": {
    "service_worker": "card-search.js"
  }
}